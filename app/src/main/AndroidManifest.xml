<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mobileappdev.miniprj.com.foodalbum">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="mobileappdev.miniprj.com.foodalbum.SplashScreen"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"
                    android:theme="@style/SplashTheme" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="mobileappdev.miniprj.com.foodalbum.MainActivity" />
        <activity
            android:name="mobileappdev.miniprj.com.foodalbum.FoodList"
            android:label="Food List"
            android:parentActivityName="mobileappdev.miniprj.com.foodalbum.MainActivity" />
        <activity
            android:name="mobileappdev.miniprj.com.foodalbum.About"
            android:label="About"
            android:parentActivityName="mobileappdev.miniprj.com.foodalbum.MainActivity" />
    </application>

</manifest>